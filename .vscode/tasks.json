{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build compiler",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--manifest-path",
                "${workspaceFolder}/compiler/Cargo.toml"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Compiler",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/compiler/target/debug/compiler",
            "args": ["compiler/tests/exemplo3.sym"],
            "cwd": "${workspaceFolder}/compiler",
            "preLaunchTask": "cargo build compiler",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Current File",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/compiler/target/debug/compiler",
            "args": ["${relativeFile}"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build compiler",
            "console": "integratedTerminal"
        }

        
    ]
}